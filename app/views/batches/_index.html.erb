<div class="m-4"data-controller="create" data-create-target="index" >
  <div class="container">
    <div class="row">
      <div class="col-3">
        <%= simple_form_for(batch,
                    data: {
                      create_target: "form",
                      action: "submit->create#send"
                      }) do |f| %>
          <%= f.input :number, label: false, input_html: {placeholder: 'Numero de lot', data: { create_target: 'input'}}  %>
          <%= f.input :quantity, label: false, input_html: {placeholder: 'QuantitÃ© en tonne', data: { create_target: 'input'}}  %>
          <%= f.input :supplier_id, collection: Supplier.all, label: false, input_html: {placeholder: 'Fournisseur', data: { create_target: 'input'}} %>
          <%= f.input :product_id, collection: Product.all, label: false, input_html: {placeholder: 'Produit', data: { create_target: 'input'}} %>
          <%= f.button :submit, class: 'btn btn-outline-primary', data: {
                                                                    disable_with: false
                                                                  } %>
        <% end %>
      </div>
    </div>
    <div class="row mt-4">
      <% if batchs.count > 0 %>
        <div data-create-target='insert'>
        </div>
        <% batchs.each do |batch| %>
          <h2><%= batch.number %></h2>
        <% end %>
      <% else %>
        <h1>Vous n'avez pas de lots</h1>
      <% end %>
    </div>
  </div>
</div>
