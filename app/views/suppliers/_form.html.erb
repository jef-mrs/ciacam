      <%= f.input :contact, label: false, input_html: {placeholder: 'nom du contact', data: { create_target: 'input'}}  %>
      <%= f.input :bio, as: :boolean, checked_value: true %>
      <%= f.button :submit, 'Mettre Ã  jour', class: 'btn btn-outline-primary', data: {
