<div class="p-4 d-flex">
  <div class='flex-grow-1'>
    <% if supplier.documents.count.positive? %>
      <% documents.each do |document|  %>
        <% if document.supplier == supplier %>
          <div class="d-flex">
            <p class="me-5"><%= document.title %></p>
            <%= link_to cloudinary_url(document.file.key, :flag=>"attachment"), download: "#{document.title} - #{document.supplier.name}", style: 'color:black; text-decoration:none', class: 'me-5', target: :_blank do %>
              <i class="fa-solid fa-download"></i>
            <% end %>
            <p>Valide jusqu'au <%= document.validate_date.strftime('%d-%m-%Y') %></p>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p>Il n'y a aucun document associ√©</p>
    <% end %>
    <br>
    <% if analyse_bios.count > 0 %>
      <div>
        <h4>Analyse</h4>
        <% analyse_bios.each do |analyse| %>
          <% if  analyse.supplier == supplier%>
            <div>
              <%= analyse.title %>
              <% if  analyse.file.attached? %>
                <%= link_to cloudinary_url(analyse.file.key, :flag=>"attachment"), download: "#{analyse.title} - #{analyse.supplier.name}", style: 'color:black; text-decoration:none', class: 'me-5', target: :_blank do %>
                  <i class="fa-solid fa-download"></i>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div data-action="click->document#close" class="me-3">
    <i class="fa-solid fa-xmark"></i>
  </div>
</div>
