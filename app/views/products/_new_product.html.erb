<div class="alert alert-primary alert-dismissible fade show m-1" role="alert">
  <%= "Produit bien enregistrÃ©" %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
  </button>
</div>

<div data-controller="info" style='background:white'>
      <div class="card-product mt-5">
        <% if product.photo.attached? %>
          <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <% end %>
        <div class="card-product-infos flex-grow-1">
          <h2><%= product.name %></h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
        <div class="card-product-edit">
          <%= link_to edit_product_path(product), class: 'me-4', data: {
                                                info_target: "model",
                                                action:"click->info#info"
                                              },
                                              style: 'text-decoration: none; color: black' do %>
            <i class="fa-solid fa-circle-info"></i>
          <% end %>
        </div>
      </div>
      <div data-info-target='insert'  class="mt-3"></div>
    </div>
</div>
