<div class="p-4 d-flex">
  <div class='flex-grow-1'>
    <% if documents.count.positive? %>
      <% documents.each do |document|  %>
        <div class="d-flex">
          <p class="me-5"><%= document.title %></p>
         <%= link_to cloudinary_url(document.file.key, :flag=>"attachment"), download: "#{document.title} - #{document.supplier.name}", style: 'color:black; text-decoration:none', class: 'me-5' do %>
            <i class="fa-solid fa-download"></i>
          <% end %>
          <p>Valide jusqu'au <%= document.validate_date.strftime('%d-%m-%Y') %></p>
        </div>
      <% end %>
    <% else %>
      <p>Il n'y a aucun document associ√©</p>
    <% end %>
  </div>
  <div data-action="click->document#close" class="me-3">
    <i class="fa-solid fa-xmark"></i>
  </div>
</div>
